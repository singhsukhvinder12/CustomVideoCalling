<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.secretmenu.common.BindingUtils" />

        <variable
            name="loginViewModel"
            type="com.secretmenu.viewmodels.LoginViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_55"
        android:layout_marginBottom="@dimen/dp_55"
        android:background="@drawable/ic_background"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dp_25"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        app:hideKeyBoardOnClick="@{`back` }">


        <TextView
            android:id="@+id/tv_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_25"
            android:text="@string/log_in"
            android:layout_gravity="start"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/colorblack"
            android:textSize="@dimen/sp_23"
            app:font="@{`bold`}"
            tools:ignore="AllCaps" />


        <LinearLayout
            android:id="@+id/ll_login_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_35"
            android:background="@drawable/ic_edit_back"
            android:layout_marginRight="@dimen/dp_10"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10">

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableEnd="@drawable/ic_user"
                android:drawableRight="@drawable/ic_user"
                android:hint="@string/email_user_phone"
                android:background="@null"
                android:inputType="textEmailAddress"
                android:maxLength="64"
                android:textAllCaps="false"
                android:textColor="@color/colorblack"
                android:textSize="@dimen/hint_size"
                app:font="@{`regular`}" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_10"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_10"
            android:background="@drawable/ic_edit_back"
            android:paddingTop="@dimen/dp_15"
            android:paddingRight="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10">

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableEnd="@drawable/ic_password"
                android:drawableRight="@drawable/ic_password"
                android:hint="@string/password"
                android:background="@null"
                android:inputType="textPassword"
                android:maxLength="20"
                android:textAllCaps="true"
                android:textColor="@color/colorblack"
                android:textSize="@dimen/hint_size"
                app:font="@{`regular`}"
                tools:ignore="Autofill" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_margin="@dimen/dp_25"
            android:background="@drawable/round_back_transparent"
            android:onClick="@{(v) -> loginViewModel.clickListener(v)}"
            android:padding="@dimen/dp_10"
            android:text="@string/log_in"
            android:textColor="@color/colorblack"

            />


        <TextView
            android:id="@+id/tv_guest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_15"
            android:onClick="@{(v) -> loginViewModel.clickListener(v)}"
            android:text="@string/guest_text"
            android:textColor="@color/colorblack"
            android:textSize="@dimen/sp_14"
            app:font="@{`semibold`}"
            tools:ignore="AllCaps" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/dp_40"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_forgot_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:layout_marginLeft="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_10"
                android:onClick="@{(v) -> loginViewModel.clickListener(v)}"
                android:text="@string/forgot_your_password"
                android:textColor="@color/colorblack"
                android:textSize="@dimen/sp_12"
                app:font="@{`regular`}" />


            <TextView
                android:id="@+id/tv_signup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_weight="5"
                android:gravity="right"
                android:paddingRight="@dimen/dp_10"
                android:onClick="@{(v) -> loginViewModel.clickListener(v)}"
                android:text="@string/signup"
                android:textColor="@color/colorblack"
                android:textSize="@dimen/sp_12"
                app:font="@{`regular`}" />

        </LinearLayout>

    </LinearLayout>

</layout>