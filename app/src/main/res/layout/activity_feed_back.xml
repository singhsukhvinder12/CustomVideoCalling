<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/appBackground">
        <include
            android:id="@+id/toolBar"
            layout="@layout/common_toolbar_back"/>

        <View
            android:id="@+id/toolbar_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@+id/toolBar"
            android:background="@color/colorGrey" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_35"
            android:background="@drawable/ic_edit_back"
            android:layout_marginRight="@dimen/dp_10"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10">


            <EditText
                android:id="@+id/et_subject"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Subject Covered"
                android:background="@null"
                android:inputType="text"
                android:maxLength="64"
                android:textAllCaps="false"
                android:textColor="@color/colorblack"
                android:textSize="@dimen/hint_size"
                app:font="@{`regular`}" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_dateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_35"
            android:background="@drawable/ic_edit_back"
            android:layout_marginRight="@dimen/dp_10"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10">


            <EditText
                android:id="@+id/et_dateTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Date Time"
                android:background="@null"
                android:inputType="text"
                android:maxLength="64"
                android:textAllCaps="false"
                android:textColor="@color/colorblack"
                android:textSize="@dimen/hint_size"
                app:font="@{`regular`}" />
        </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_tutorName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_35"
                android:background="@drawable/ic_edit_back"
                android:layout_marginRight="@dimen/dp_10"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10">


                <EditText
                    android:id="@+id/et_tutorName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Date Time"
                    android:background="@null"
                    android:inputType="text"
                    android:maxLength="64"
                    android:textAllCaps="false"
                    android:textColor="@color/colorblack"
                    android:textSize="@dimen/hint_size"
                    app:font="@{`regular`}" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_FourStep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_35"
                android:background="@drawable/ic_edit_back"
                android:layout_marginRight="@dimen/dp_10"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10">


                <EditText
                    android:id="@+id/et_FourStep"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="4 Steps to success of this subject"
                    android:background="@null"
                    android:inputType="text"
                    android:maxLength="64"
                    android:textAllCaps="false"
                    android:textColor="@color/colorblack"
                    android:textSize="@dimen/hint_size"
                    app:font="@{`regular`}" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_remember"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_35"
                android:background="@drawable/ic_edit_back"
                android:layout_marginRight="@dimen/dp_10"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10">


                <EditText
                    android:id="@+id/et_remember"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Things need to be remeber"
                    android:background="@null"
                    android:inputType="text"
                    android:maxLength="64"
                    android:textAllCaps="false"
                    android:textColor="@color/colorblack"
                    android:textSize="@dimen/hint_size"
                    app:font="@{`regular`}" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_learned"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_35"
                android:background="@drawable/ic_edit_back"
                android:layout_marginRight="@dimen/dp_10"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10">


                <EditText
                    android:id="@+id/et_learned"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Something Learned"
                    android:background="@null"
                    android:inputType="text"
                    android:maxLength="64"
                    android:textAllCaps="false"
                    android:textColor="@color/colorblack"
                    android:textSize="@dimen/hint_size"
                    app:font="@{`regular`}" />

            </LinearLayout>
                <RelativeLayout
                    android:id="@+id/rel_spinner_progress"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_20"
                    android:visibility="visible"
                    android:padding="@dimen/dp_2"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_10"
                    tools:ignore="UnusedAttribute">


                    <ImageView
                        android:id="@+id/iv_arrow_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:padding="8dp"
                        android:src="@drawable/ic_down"
                        tools:ignore="ContentDescription,RtlHardcoded,VectorDrawableCompat" />

                    <Spinner
                        android:id="@+id/sp_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/iv_arrow_progress"
                        android:background="@drawable/edittext_round_layout"
                        tools:ignore="RtlHardcoded,UnusedAttribute" />
                </RelativeLayout>
                <View
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:background="@color/colorBlack"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"/>

            <RelativeLayout
                android:id="@+id/relativeLayoutforGROTH"
                android:layout_width="fill_parent"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/grothSeekBartextViewProgressID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="Growth"
                    android:textAppearance="?android:attr/textAppearanceLarge" >
                </TextView>

                <SeekBar
                    android:id="@+id/grothSeekBarID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/grothSeekBartextViewProgressID"
                    android:layout_marginTop="26dp"
                    android:max="50" >
                </SeekBar>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/ll_exercises"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_35"
                android:background="@drawable/ic_edit_back"
                android:layout_marginRight="@dimen/dp_10"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10">


                <EditText
                    android:id="@+id/et_exercises"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Daily exercises to help the subject"
                    android:background="@null"
                    android:inputType="text"
                    android:maxLength="64"
                    android:textAllCaps="false"
                    android:textColor="@color/colorblack"
                    android:textSize="@dimen/hint_size"
                    app:font="@{`regular`}" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_35"
                android:background="@drawable/ic_edit_back"
                android:layout_marginRight="@dimen/dp_10"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10">


                <EditText
                    android:id="@+id/et_tips"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Tips and tricks to help"
                    android:background="@null"
                    android:inputType="text"
                    android:maxLength="64"
                    android:textAllCaps="false"
                    android:textColor="@color/colorblack"
                    android:textSize="@dimen/hint_size"
                    app:font="@{`regular`}" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_35"
                android:background="@drawable/ic_edit_back"
                android:layout_marginRight="@dimen/dp_10"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10">


                <EditText
                    android:id="@+id/et_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Date"
                    android:background="@null"
                    android:inputType="text"
                    android:maxLength="64"
                    android:textAllCaps="false"
                    android:textColor="@color/colorblack"
                    android:textSize="@dimen/hint_size"
                    app:font="@{`regular`}" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_add_feedback"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@drawable/round_back_transparent"
                android:padding="@dimen/dp_10"
                android:text="@string/add_feedback"
                android:textColor="@color/colorWhite"

                />
        </LinearLayout>
        </ScrollView>
    </LinearLayout>

</layout>