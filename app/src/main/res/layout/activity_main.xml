<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Kotlin_tabs.TabActivity">

    <data>

        <variable
            name="MainViewModel"
            type="com.customvideocalling.viewmodels.MainViewModel" />

    </data>


    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:openDrawer="start">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent">

            <include
                android:id="@+id/common_tool_bar"
                layout="@layout/common_toolbar_back"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_toobar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:onClick="@{(v) -> MainViewModel.clickListener(v)}" />

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/common_tool_bar"
                app:tabBackground="@color/colorWhite"
                app:tabIndicatorColor="@color/tabSelection"
                app:tabMode="fixed" />

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_100"
                app:layout_constraintTop_toBottomOf="@+id/tabs"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                 />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_marginEnd="-65dp"
            android:layout_marginRight="-65dp"
            android:alpha="0.9"
            android:background="@color/colorWhite"
            android:fitsSystemWindows="true"
            app:theme="@style/NavigationViewStyle">

            <!-- <android.support.design.widget.NavigationView
                     android:id="@+id/nav_view"
                     android:layout_width="wrap_content"
                     android:layout_height="match_parent"
                     android:layout_gravity="start"
                     android:fitsSystemWindows="true"
                     app:headerLayout="@layout/nav_header_main"
                     app:itemIconPadding="@dimen/dp_15"
                     android:visibility="visible"
                     app:itemIconTint="@drawable/drawer_item"
                     app:itemTextAppearance="@style/NavigationTextViewStyle"
                     app:itemTextColor="@drawable/drawer_text_item"
                     app:menu="@menu/activity_home_drawer"
                     app:theme="@style/NavigationViewStyle" />-->

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">
                    <!-- <include
                         layout="@layout/header_view"/>-->

                    <LinearLayout
                        android:id="@+id/ll_profile"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_160"
                        android:background="@color/colorPrimary"
                        android:orientation="vertical"
                        android:onClick="@{(v) -> MainViewModel.clickListener(v)}"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_10"
                        android:theme="@style/ThemeOverlay.AppCompat.Dark">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/ic_profile"
                            android:layout_width="@dimen/dp_80"
                            android:layout_height="90dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dp_10"
                            android:onClick="@{(v) -> MainViewModel.clickListener(v)}"
                            android:src="@drawable/ic_user" />

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_4"
                            android:gravity="center_horizontal"
                            android:onClick="@{(v) -> MainViewModel.clickListener(v)}"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="@color/colorWhite" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_fleet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorGrey1"
                            android:gravity="center"
                            android:paddingStart="@dimen/dp_10"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingTop="@dimen/dp_5"
                            android:paddingBottom="@dimen/dp_5"
                            android:text="@string/fleet_management"
                            android:textAllCaps="true"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/sp_18"
                            android:visibility="gone"
                            tools:ignore="RtlSymmetry" />

                        <TextView
                            android:id="@+id/tv_nav_home"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_20"
                            android:gravity="center_vertical"
                            android:onClick="@{(v) -> MainViewModel.clickListener(v)}"
                            android:paddingStart="@dimen/dp_10"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_5"
                            android:text="@string/home"
                            android:textAllCaps="true"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/sp_18"
                            tools:ignore="RtlSymmetry" />

                        <TextView
                            android:id="@+id/tv_nav_vehicle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:onClick="@{(v) -> MainViewModel.clickListener(v)}"
                            android:paddingStart="@dimen/dp_10"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingTop="12dp"
                            android:paddingBottom="@dimen/dp_5"
                            android:text="@string/token_history"
                            android:textAllCaps="true"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/sp_18"
                            tools:ignore="RtlSymmetry" />

                        <TextView
                            android:id="@+id/tv_nav_fuel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:onClick="@{(v) -> MainViewModel.clickListener(v)}"
                            android:paddingStart="@dimen/dp_10"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingTop="@dimen/dp_12"
                            android:paddingBottom="@dimen/dp_5"
                            android:text="@string/recordings"
                            android:textAllCaps="true"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/sp_18"
                            tools:ignore="RtlSymmetry" />



                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_nav_feedback"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:onClick="@{(v) -> MainViewModel.clickListener(v)}"
                        android:paddingStart="@dimen/dp_10"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_12"
                        android:paddingBottom="@dimen/dp_5"
                        android:text="@string/feedback"
                        android:textAllCaps="true"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp_18"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:id="@+id/tv_nav_notification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:onClick="@{(v) -> MainViewModel.clickListener(v)}"
                        android:paddingStart="@dimen/dp_10"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_12"
                        android:paddingBottom="@dimen/dp_5"
                        android:text="@string/notifications"
                        android:textAllCaps="true"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp_18"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:id="@+id/tv_nav_logout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:onClick="@{(v) -> MainViewModel.clickListener(v)}"
                        android:paddingStart="@dimen/dp_10"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_12"
                        android:paddingBottom="@dimen/dp_5"
                        android:text="@string/logout"
                        android:textAllCaps="true"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp_18"
                        tools:ignore="RtlSymmetry" />

                    <ImageView
                        android:id="@+id/img_nav_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_30"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:contentDescription="@string/todo"
                        android:onClick="@{(v) -> MainViewModel.clickListener(v)}"
                        android:src="@drawable/ic_cross"
                        android:tint="@color/colorBlack" />

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

        </com.google.android.material.navigation.NavigationView>

    </androidx.drawerlayout.widget.DrawerLayout>

</layout>