<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="profileViewModel"
            type="com.customvideocalling.viewmodels.ProfileViewModel" />

        <variable
            name="profileModel"
            type="com.customvideocalling.model.ProfileResponse.UserDetail" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <include

            android:id="@+id/common_tool_bar"
            layout="@layout/common_toolbar_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{(v) -> profileViewModel.clickListener(v)}" />

        <ScrollView
            android:id="@+id/parent_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:background="@color/colorWhite"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/upload_profile_layer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:visibility="gone"
                    android:onClick="@{(v) -> profileViewModel.clickListener(v)}"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_10">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/img_profile"
                            android:layout_width="@dimen/dp_120"
                            android:layout_height="@dimen/dp_120"
                            android:layout_centerInParent="true"
                            android:contentDescription="@string/todo"
                            android:src="@drawable/ic_user" />


                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/iv_edit"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignEnd="@+id/img_profile"
                            android:layout_alignRight="@+id/img_profile"
                            android:layout_alignBottom="@+id/img_profile"
                            android:background="@drawable/ic_edit_image"
                            android:elevation="@dimen/dp_10"
                            android:onClick="@{(v) -> profileViewModel.clickListener(v)}"
                            tools:targetApi="lollipop" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/iv_profile_picture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="@string/upload_profile_picture"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBlack2"
                        android:textSize="@dimen/sp_13"
                        android:visibility="gone" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_summary_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="@string/summary"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack2"
                    android:textSize="@dimen/sp_15"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/dp_80"
                    android:textAllCaps="false"
                    android:padding="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_5"
                    android:background="@drawable/edt_back_shape_colored"
                    android:textColor="@color/colorBlack2"
                    android:textSize="@dimen/sp_14"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_basic_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="@string/basic_info"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack2"
                    android:textSize="@dimen/sp_15"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/et_firstname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_5"
                    android:background="@drawable/edt_back_shape_colored"
                    android:elevation="2dp"
                    android:hint="@string/first_name"
                    android:enabled="false"
                    android:inputType="text"
                    android:maxLength="30"
                    android:padding="@dimen/dp_15"

                    android:singleLine="true"
                    android:textColor="@color/colorblack"
                    android:textColorHint="@color/colorGrey"
                    android:textSize="@dimen/sp_14"
                    tools:ignore="MissingConstraints" />

                <EditText
                    android:enabled="false"
                    android:id="@+id/et_lastname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_5"
                    android:background="@drawable/edt_back_shape_colored"
                    android:elevation="2dp"
                    android:hint="@string/last_name"
                    android:inputType="text"
                    android:maxLength="30"
                    android:padding="@dimen/dp_15"

                    android:singleLine="true"

                    android:textColor="@color/colorblack"
                    android:textColorHint="@color/colorGrey"
                    android:textSize="@dimen/sp_14"
                    tools:ignore="MissingConstraints" />

                <EditText
                    android:enabled="false"
                    android:id="@+id/et_birthday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:background="@drawable/edt_back_shape_colored"
                    android:elevation="2dp"
                    android:hint="@string/birth_day"
                    android:inputType="text"
                    android:maxLength="30"
                    android:padding="@dimen/dp_15"

                    android:singleLine="true"

                    android:textColor="@color/colorblack"
                    android:textColorHint="@color/colorGrey"
                    android:textSize="@dimen/sp_14"
                    tools:ignore="MissingConstraints" />

                <LinearLayout
                    android:id="@+id/ll_questionaire"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/dp_10">



                <TextView
                    android:id="@+id/tv_questionnaire"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/questionnaire"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack2"
                    android:textSize="@dimen/sp_15"
                 />

                <TextView
                    android:id="@+id/tv_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="info"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack2"
                    android:textSize="@dimen/sp_13"
                    />
                <EditText
                    android:enabled="false"
                    android:id="@+id/et_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:background="@drawable/edt_back_shape_colored"
                    android:elevation="2dp"
                    android:hint="info"
                    android:maxLength="100"
                    android:padding="@dimen/dp_15"

                    android:singleLine="true"

                    android:textColor="@color/colorblack"
                    android:textColorHint="@color/colorGrey"
                    android:textSize="@dimen/sp_14"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/tv_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="What Grade?"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack2"
                    android:textSize="@dimen/sp_13"
                   />
                <EditText
                    android:enabled="false"
                    android:id="@+id/et_grade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:background="@drawable/edt_back_shape_colored"
                    android:elevation="2dp"
                    android:hint="What Grade?"
                    android:maxLength="100"
                    android:padding="@dimen/dp_15"

                    android:singleLine="true"

                    android:textColor="@color/colorblack"
                    android:textColorHint="@color/colorGrey"
                    android:textSize="@dimen/sp_14"
                    tools:ignore="MissingConstraints" />


                <TextView
                    android:id="@+id/tv_needed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="What is needed?"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack2"
                    android:textSize="@dimen/sp_13"
                    />
                <EditText
                    android:enabled="false"
                    android:id="@+id/et_needed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:background="@drawable/edt_back_shape_colored"
                    android:elevation="2dp"
                    android:hint="What is needed?"
                    android:maxLength="100"
                    android:padding="@dimen/dp_15"

                    android:singleLine="true"

                    android:textColor="@color/colorblack"
                    android:textColorHint="@color/colorGrey"
                    android:textSize="@dimen/sp_14"
                    tools:ignore="MissingConstraints" />


                <TextView
                    android:id="@+id/tv_help"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="What help do you need?"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack2"
                    android:textSize="@dimen/sp_13"
                    />
                <EditText
                    android:enabled="false"
                    android:id="@+id/et_help"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:background="@drawable/edt_back_shape_colored"
                    android:elevation="2dp"
                    android:hint="What help do you need?"
                    android:maxLength="100"
                    android:padding="@dimen/dp_15"
                    android:singleLine="true"

                    android:textColor="@color/colorblack"
                    android:textColorHint="@color/colorGrey"
                    android:textSize="@dimen/sp_14"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/tv_superhero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="superhero"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack2"
                    android:textSize="@dimen/sp_13"
                    />
                <EditText
                    android:enabled="false"
                    android:id="@+id/et_superhero"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:background="@drawable/edt_back_shape_colored"
                    android:elevation="2dp"
                    android:hint="superhero"
                    android:maxLength="100"
                    android:padding="@dimen/dp_15"
                    android:singleLine="true"

                    android:textColor="@color/colorblack"
                    android:textColorHint="@color/colorGrey"
                    android:textSize="@dimen/sp_14"
                    tools:ignore="MissingConstraints" />

                </LinearLayout>
                <TextView
                    android:id="@+id/tv_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="Contact"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack2"
                    android:textSize="@dimen/sp_15"
                    android:visibility="visible" />

                <EditText
                    android:enabled="false"
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_5"
                    android:background="@drawable/edt_back_shape_colored"
                    android:elevation="2dp"
                    android:hint="@string/email"
                    android:maxLength="100"
                    android:padding="@dimen/dp_15"

                    android:singleLine="true"

                    android:textColor="@color/colorblack"
                    android:textColorHint="@color/colorGrey"
                    android:textSize="@dimen/sp_14"
                    tools:ignore="MissingConstraints" />

                <EditText
                    android:enabled="false"
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_5"
                    android:background="@drawable/edt_back_shape_colored"
                    android:elevation="2dp"
                    android:hint="PhoneNumber"
                    android:maxLength="100"
                    android:padding="@dimen/dp_15"
android:layout_marginBottom="@dimen/dp_20"
                    android:singleLine="true"
                    android:textColor="@color/colorblack"
                    android:textColorHint="@color/colorGrey"
                    android:textSize="@dimen/sp_14"
                    tools:ignore="MissingConstraints" />




                </LinearLayout>



